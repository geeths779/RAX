# ─── Google Gemini ────────────────────────────────────────────────────────────
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ─── Supabase ────────────────────────────────────────────────────────────────
# Get these from: https://supabase.com → your project → Settings → API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Get this from: Settings → Database → Connection string → URI (switch to asyncpg driver)
DATABASE_URL=postgresql+asyncpg://postgres:[your-password]@db.your-project-ref.supabase.co:5432/postgres?sslmode=require

# ─── Qdrant ───────────────────────────────────────────────────────────────────
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_cloud_api_key_here   # leave blank for local Docker

# ─── Auth ─────────────────────────────────────────────────────────────────────
SECRET_KEY=changeme_use_a_long_random_string_here
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ─── CORS ─────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:5173,https://your-vercel-app.vercel.app
